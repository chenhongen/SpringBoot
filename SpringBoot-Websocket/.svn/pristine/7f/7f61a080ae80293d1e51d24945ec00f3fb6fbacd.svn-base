import Play from './pages/Play';
import BlankLayout from './layouts/BlankLayout';
import HeaderFooterLayout from './layouts/HeaderFooterLayout';
import NotFound from './pages/NotFound';
import Scan from './pages/Scan';
import VinG from './pages/VinG';
import WorkshopStation from './pages/WorkshopStation';


autorun(() => {
  if(MobxData.MOBX_DATA.role == 1 && hashHistory.getCurrentLocation().pathname != '/scan')
    hashHistory.replace("/scan");//hashHistory.push("/scan")
});

const autoGeneratedRoutes = [{
  path: 'play',
  childRoutes: [],
  component: HeaderFooterLayout,
  indexRoute: {
    component: Play
  }
}, {
  path: 'scan',
  childRoutes: [],
  component: HeaderFooterLayout,
  indexRoute: {
    component: Scan
  }
}, {
  path: 'ving',
  childRoutes: [],
  component: HeaderFooterLayout,
  indexRoute: {
    component: VinG
  }
}, {
  path: 'station',
  childRoutes: [],
  component: HeaderFooterLayout,
  indexRoute: {
    component: WorkshopStation
  }
}, {
  path: '/',
  childRoutes: [{
    path: '*',
    childRoutes: [],
    component: NotFound
  }],
  component: HeaderFooterLayout,
  indexRoute: {
    component: Play
  }
}];
// <!-- auto generated routes end -->

// 自定义路由，如果 path 相同则会覆盖自动生成部分的路由配置
const customRoutes = [];

export default (
  <Router
    history={hashHistory}
    routes={[...autoGeneratedRoutes, ...customRoutes]}
  />
);
